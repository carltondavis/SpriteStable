<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context="com.hazyfutures.spritestable.StatFragment">

    <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editBody"
            android:width="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:width="100dp"
            android:id="@+id/editWillpower"
            android:layout_below="@+id/editBody"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editBody" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:width="100dp"
            android:ems="10"
            android:id="@+id/editIntuition"
            android:layout_below="@+id/editWillpower"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/textView2"
            android:layout_toStartOf="@+id/textView2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editLogic"
            android:layout_below="@+id/editIntuition"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editBody"
            android:layout_alignEnd="@+id/editBody" />

        <EditText
            android:layout_width="wrap_content"
            android:width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editCharisma"
            android:layout_below="@+id/editLogic"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/textView3"
            android:layout_toStartOf="@+id/textView3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editCompiling"
            android:layout_below="@+id/editCharisma"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:width="100dp"
            android:id="@+id/editRegistering"
            android:layout_below="@+id/editCompiling"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/textView6"
            android:layout_toStartOf="@+id/textView6" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:width="100dp"
            android:id="@+id/editResonance"
            android:layout_below="@+id/editRegistering"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/textView7"
            android:layout_toStartOf="@+id/textView7" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:width="100dp"
            android:ems="10"
            android:id="@+id/editStun"
            android:layout_below="@+id/editResonance"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/textView8"
            android:layout_toStartOf="@+id/textView8" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editPhysical"
            android:layout_below="@+id/editStun"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/textView9"
            android:layout_toStartOf="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Body"
            android:id="@+id/textView1"
            android:layout_above="@+id/editWillpower"
            android:layout_toRightOf="@+id/editBody"
            android:layout_alignBottom="@+id/editBody"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Willpower"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/editWillpower"
            android:layout_toRightOf="@+id/editWillpower" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Intuition"
            android:id="@+id/textView3"
            android:layout_alignBottom="@+id/editIntuition"
            android:layout_toRightOf="@+id/editIntuition" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Logic"
            android:id="@+id/textView4"
            android:layout_alignBottom="@+id/editLogic"
            android:layout_toRightOf="@+id/editLogic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Charisma"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/editCharisma"
            android:layout_toRightOf="@+id/editCharisma" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Compiling"
            android:id="@+id/textView6"
            android:layout_alignBottom="@+id/editCompiling"
            android:layout_toRightOf="@+id/editCompiling" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Registering"
            android:id="@+id/textView7"
            android:layout_alignBottom="@+id/editRegistering"
            android:layout_toRightOf="@+id/editRegistering" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Resonance"
            android:id="@+id/textView8"
            android:layout_alignBottom="@+id/editResonance"
            android:layout_toRightOf="@+id/editResonance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Stun"
            android:id="@+id/textView9"
            android:layout_alignBottom="@+id/editStun"
            android:layout_toRightOf="@+id/editStun" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Physical"
            android:id="@+id/textView10"
            android:layout_alignBottom="@+id/editPhysical"
            android:layout_toRightOf="@+id/editPhysical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editKarma"
            android:layout_below="@+id/editPhysical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editBody" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Karma"
            android:id="@+id/textView11"
            android:layout_alignBottom="@+id/editKarma"
            android:layout_toRightOf="@+id/editPhysical"
            android:layout_toEndOf="@+id/editPhysical" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editKarmaUsed"
        android:layout_below="@+id/editKarma"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editBody" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Karma Used"
        android:id="@+id/textKarmaUsed"
        android:layout_toRightOf="@+id/editBody"
        android:layout_toEndOf="@+id/textView1"
        android:layout_alignBottom="@+id/editKarmaUsed" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editConsecutiveHoursRested"
        android:layout_below="@+id/editKarmaUsed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editBody" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Consecutive Hours Rested"
        android:id="@+id/textConsecutiveHoursRested"
        android:layout_alignLeft="@+id/textKarmaUsed"
        android:layout_alignStart="@+id/textKarmaUsed"
        android:layout_alignBottom="@+id/editConsecutiveHoursRested" />


</RelativeLayout>
