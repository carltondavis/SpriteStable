<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hazyfutures.spritestable.SpriteFragment"
    >
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:maxEms="2"
        android:id="@+id/editServices"
        android:text="0"
        android:layout_gravity="left|top"
        android:layout_below="@+id/editGod"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Force"
        android:id="@+id/textForce"
        android:layout_gravity="left|top"
        android:layout_below="@+id/SpriteSpinnerSprites"
        android:layout_toRightOf="@+id/editForce"
        android:layout_toEndOf="@+id/editForce"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:maxEms="2"
        android:id="@+id/editDamage"
        android:text="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/editServices"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Services"
        android:id="@+id/textServices"
        android:layout_gravity="center_horizontal|top"
        android:layout_above="@+id/editDamage"
        android:layout_toRightOf="@+id/editServices"
        android:layout_toEndOf="@+id/editServices" />

    <EditText
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:maxEms="2"
        android:id="@+id/editForce"
        android:text="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignBottom="@+id/textForce"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editGod"
        android:layout_alignEnd="@+id/editGod" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Damage"
        android:id="@+id/textDamage"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignBottom="@+id/editDamage"
        android:layout_toRightOf="@+id/editDamage"
        android:layout_toEndOf="@+id/editDamage" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpriteSpinnerSprites"
        android:layout_gravity="left|center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpriteSpinnerType"
        android:layout_gravity="left|center_vertical"
        android:layout_alignTop="@+id/editForce"
        android:layout_toRightOf="@+id/textSpriteResonance"
        android:layout_toEndOf="@+id/textSpriteResonance" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GOD Score"
        android:id="@+id/textGOD"
        android:layout_gravity="left|center_vertical"
        android:layout_above="@+id/editServices"
        android:layout_toRightOf="@+id/editGod"
        android:layout_toEndOf="@+id/editGod" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:maxEms="4"
        android:id="@+id/editGod"
        android:text="0"
        android:enabled="true"
        android:layout_gravity="left|center_vertical"
        android:layout_below="@+id/editForce"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registered"
        android:id="@+id/checkBoxRegistered"
        android:checked="false"
        android:layout_gravity="right|top"
        android:layout_alignBottom="@+id/editServices"
        android:layout_toRightOf="@+id/textServices"
        android:layout_toEndOf="@+id/textServices" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Attack"
        android:id="@+id/textAttack"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sleaze"
        android:id="@+id/textSleaze"
        android:layout_below="@+id/textAttack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Data Processing"
        android:id="@+id/textDataProcessing"
        android:layout_below="@+id/textSleaze"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Firewall"
        android:id="@+id/textFirewall"
        android:layout_below="@+id/textDataProcessing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Initiative"
        android:id="@+id/textInitiative"
        android:layout_below="@+id/textFirewall"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Initiative Dice 4D6"
        android:id="@+id/textInitiativeDice"
        android:layout_below="@+id/textInitiative"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Resonance"
        android:id="@+id/textSpriteResonance"
        android:layout_below="@+id/textInitiativeDice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Skills"
        android:id="@+id/textSkills"
        android:layout_below="@+id/textSpriteResonance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Powers"
        android:id="@+id/textPowers"
        android:layout_below="@+id/textSkills"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
